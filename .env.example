# =====================================================
# Docker Compose Environment Variables
# =====================================================
# Copy this file to .env and update the values
# =====================================================

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme123

# JWT Secrets
# IMPORTANT: Generate strong random strings for production!
# Generate with: openssl rand -hex 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-64-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://mohd-morad.pro,https://www.mohd-morad.pro

# Frontend Build Args
VITE_API_URL=https://api.mohd-morad.pro/api/v1
VITE_SOCKET_URL=https://api.mohd-morad.pro

# Cache
CACHE_TTL=300
CACHE_MAX=100

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
